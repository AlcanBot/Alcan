{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "@classes/*": ["classes/*"],
            "@handlers/*": ["classes/handlers/*"],
            "@util/*": ["util/*"],
            "types/*": ["types/*"],
            "@i18n/*": ["i18n/*"]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
